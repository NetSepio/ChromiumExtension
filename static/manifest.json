{
	"name": "Netsepio",
	"description": "Secure VPN & Web3 wallet with AI protection. Multi-chain support, dApp integration, and crypto scam protection.",
	"version": "0.5.2",
	"manifest_version": 3,
	"action": {
		"default_title": "Netsepio",
		"default_popup": "index.html",
		"default_icon": "/favicon.png"
	},
	"permissions": ["proxy", "storage", "webRequest", "webRequestAuthProvider", "proxy"],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["wallet-provider.js"],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"host_permissions": ["<all_urls>"],
	"web_accessible_resources": [
		{
			"resources": ["*.html", "*.js", "*.css", "assets/*", "wallet-injected.js"],
			"matches": ["<all_urls>"]
		}
	]
}
